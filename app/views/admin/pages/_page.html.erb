<script type="text/javascript">

$(document).ready(function() {

  $("#page_title_input #page_slug").prop("disabled", true);

  $("#page_title_input #page_title").change(function() {
    var _value = $("#page_title_input #page_title").val();
    _value = removeSpecialChars(_value);
    _value = _value.replace(/\s+/g, '-').toLowerCase();
    $("#page_slug_input #page_slug").val(_value);
  });
});

function removeSpecialChars(str) {
  return str.replace(/(?!\w|\s)./g, '')
    .replace(/\s+/g, ' ')
    .replace(/^(\s*)([\W\w]*)(\b\s*$)/g, '$2');
}

</script>
