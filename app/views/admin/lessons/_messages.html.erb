<table style="width: 90%; margin:0 auto;">
  <thead>
    <tr>
      <th>
        Message
      </th>
      <th style="width: 20%">
        User
      </th>
      <th style="width: 10%">
        
      </th>
    </tr>
  </thead>
  <tbody>
    <% resource.chat_bubbles.each do |cb| %>
    <tr>
      <td>
        <%= cb.message %>
      </td>
      <td>
        <%= cb.user.name %>
      </td>
      <td>
        <%= link_to 'Remove', "#{chat_bubbles_admin_lesson_category_lesson_path}/?cb=#{cb.id}", method: :delete %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>